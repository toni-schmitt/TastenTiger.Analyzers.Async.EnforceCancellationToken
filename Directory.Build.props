<Project>

    <PropertyGroup>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>

        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <IsPackable>false</IsPackable>
        <IsTestProject>false</IsTestProject>
    </PropertyGroup>

    <PropertyGroup>
        <Authors>Toni Schmitt</Authors>
        <Description>A Roslyn analyzer that detects async Task- and ValueTask-returning methods missing a CancellationToken parameter, offering diagnostics and automated code fixes.</Description>
        <Copyright>Copyright $(Authors)</Copyright>
        <PackageProjectUrl>https://codeberg.org/toni-schmitt/TastenTiger.Analyzers.Async.EnforceCancellationToken</PackageProjectUrl>
        <PackageIcon>TODO</PackageIcon>
        <PackageReadmeFile>README.MD</PackageReadmeFile>
        <RepositoryUrl>https://codeberg.org/toni-schmitt/TastenTiger.Analyzers.Async.EnforceCancellationToken</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>async cancellationtoken codefix analyzers roslyn roslyn-analyzer roslyn-codefix</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
    </PropertyGroup>

</Project>